{
	"crop.json": "crop.json",
	"site.json": "site.json",
	"climate.csv": "climate.csv",

	"climate.csv-options": {
		"start-date": "1971-01-01",
		"end-date": "2000-12-31",
		"no-of-climate-file-header-lines": 2,
		"csv-separator": ",",
		"header-to-acd-names": {}
	},
	
	"debug?": false,
	"path-to-output": "./",
	"include-file-base-path": "./",
	
	"output": { 
	  "write-file?": false,
		"file-name": "out.csv",
	
		"csv-options": {
			"include-header-row": true,
			"include-units-row": true,
			"csv-separator": ","
		},
		
		"1 events": [
			"daily", [
				"Date",
				"Crop",
				"TraDef"
			]
		],

		"events": [
			"crop", [
				["Year", "LAST"],
				["Yield|yield", "LAST"],
				["NFert|applied-N", "SUM"],
				["NLeach|N-leaching", "SUM"],
				["SumNUp|N-uptake", "LAST"],
				["Count|cycle-length", "SUM"]
			],
			{"while": ["Stage", "=", 1]},[
				["Year", "LAST"],
				["TraDef|TraDef1", "AVG"]
			],

			{"while": ["Stage", "=", 2]},[
				["Year", "LAST"],
				["TraDef|TraDef2", "AVG"]
			],

			{"while": ["Stage", "=", 3]},[
				["Year", "LAST"],
				["TraDef|TraDef3", "AVG"]
			],

			{"while": ["Stage", "=", 4]},[
				["Year", "LAST"],
				["TraDef|TraDef4", "AVG"]
			],

			{"while": ["Stage", "=", 5]},[
				["Year", "LAST"],
				["TraDef|TraDef5", "AVG"]
			],

			{"while": ["Stage", "=", 6]},[
				["Year", "LAST"],
				["TraDef|TraDef6", "AVG"]
			],
			{"while": ["Stage", "=", 7]},[
				["Year", "LAST"],
				["TraDef|TraDef7", "AVG"]
			]		
		]
	},
	
	"NumberOfLayers": 20,
	"LayerThickness": [0.1, "m"],

	"UseSecondaryYields": true,
	"NitrogenResponseOn": true,
	"WaterDeficitResponseOn": true,
	"EmergenceMoistureControlOn": false,
	"EmergenceFloodingControlOn": false,

	"UseAutomaticIrrigation": true,
	"AutoIrrigationParams": {
		"irrigationParameters": {
			"nitrateConcentration": [0, "mg dm-3"],
			"sulfateConcentration": [0, "mg dm-3"]
		},
		"amount": [20, "mm"],
		"threshold": 0.35
	},

	"UseNMinMineralFertilisingMethod": false,
	"NMinUserParams": { "min": 25, "max": 90, "delayInDays": 20 },
	"NMinFertiliserPartition": ["include-from-file", "monica-parameters/mineral-fertilisers/AN.json"],
	"JulianDayAutomaticFertilising": 89
}
